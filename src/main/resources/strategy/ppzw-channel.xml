<?xml version="1.0" encoding="UTF-8"?>


<strategy>

	<array xpath="//ul[@class='bookIndex1']/li" jsonKey="result">
		<string xpath="./a[1]/img" attribute="src" handler="urlFormat" jsonKey="cover" />
		<string xpath="./a[2]" handler="titleFormat" jsonKey="title" />
		<string xpath="./a[2]" attribute="href" handler="urlFormat" jsonKey="url" />
	</array>

	<handler id="urlFormat" scriptType="javascript">
		var result = "http://www.ppzuowen.com" + param;
	</handler>

	<handler id="titleFormat" scriptType="javascript">
		var result = "《" + param + "》";
	</handler>

</strategy>
 